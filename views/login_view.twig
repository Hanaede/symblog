{% extends "layout.twig" %}

{% block nav %}
    <nav>
        <ul class="navigation">
            <li><a href="http://blog.local/">Home</a></li>
            <li><a href="http://blog.local/about">About</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <h1>Iniciar sesión</h1>
    
    {% if app.request.cookies.has('newUser') %}
        <div class="blogger-notice">Inicio de sesión con éxtio.</div>
    {% endif %}

    <form class="blogger" action="/login" method="post">
        <div>
            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="passwd">Contraseña:</label>
            <input type="password" id="passwd" name="passwd" required>
        </div>
        <div>
            <input name="login" type="submit" value="Iniciar sesión">
        </div>
    </form>
{% endblock %}