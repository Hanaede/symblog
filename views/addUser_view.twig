{% extends "layout.twig" %}

{% block nav %}
    <nav>
        <ul class="navigation">
            <li><a href="http://blog.local/">Home</a></li>
            <li><a href="http://blog.local/about">About</a></li>
            <li><a href="http://blog.local/contact">Contact</a></li>
            <li><a href="http://blog.local/admin">Admin</a></li>
            <li><a href="http://blog.local/logout">Logout</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <h1>Registra un nuevo usuario</h1>

    {% if cookie is not null %}
        <div class="blogger-notice">Usuario creado con éxito.</div>
    {% endif %}

    <form class="blogger" action="" method="post">
        <div>
            <label for="user">Usuario:</label>
            <input type="text" id="user" name="user" required>
        </div>
        <div>
            <label for="passwd">Contraseña:</label>
            <input type="password" id="passwd" name="passwd" required>
        </div>
        <div>
            <label for="email">Correo:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <input name="createUser" type="submit" value="Registrarse">
        </div>
    </form>
{% endblock %}

{% block sidebar %}
    {% include "sidebar.twig" %}
{% endblock %}

