{% extends "layout.twig" %}

{% block nav %}
    <nav>
        <ul class="navigation">
            <li><a href="http://blog.local/">Home</a></li>
            <li><a href="http://blog.local/about">About</a></li>
            {% if profile == "Invitado" %}
                <li><a href="http://blog.local/login">Login</a></li>
            {% else %}
                <li><a href="http://blog.local/contact">Contact</a></li>
                <li><a href="http://blog.local/admin">Admin</a></li>
                <li><a href="http://blog.local/logout">Logout</a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <h1>Crea un blog</h1>

    {% if cookie is not null %}
        <div class="blogger-notice">Blog creado con éxito.</div>
    {% endif %}

    <form class="blogger" action="/addBlog" method="post" enctype="multipart/form-data">
        <div>
            <label for="title">Título:</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div>
            <label for="desc">Descripción:</label>
            <textarea id="desc" name="desc" required></textarea>
        </div>
        <div>
            <label for="tags">Tags:</label>
            <input type="text" id="tags" name="tags" required>
        </div>
        <div>
            <label for="image">Imagen:</label>
            <input type="file" id="image" name="image">
        </div>
        <div>
            <label for="author">Autor:</label>
            <input type="text" id="author" name="author" required>
        </div>
        <div>
            <input name="create" type="submit" value="Enviar">
        </div>
    </form>
{% endblock %}

{% block sidebar %}
    {% include "sidebar.twig" %}
{% endblock %}